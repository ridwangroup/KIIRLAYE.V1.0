<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/ridwandb</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        <property name="current_session_context_class">thread</property>
        <mapping class="sn.ridwan.ipm.model.User"/>
        <mapping class="sn.ridwan.ipm.model.Adherent"/>
        <mapping class="sn.ridwan.ipm.model.Agent"/>
        <mapping class="sn.ridwan.ipm.model.EntrepriseClient"/>
        <mapping class="sn.ridwan.ipm.model.Adresse"/>
        <mapping class="sn.ridwan.ipm.model.User_Roles"/>
        <mapping class="sn.ridwan.security.sessions.SessionEntity"/>
        <mapping class="sn.ridwan.security.log.RequestLog"/>
        <mapping class="sn.ridwan.ipm.model.Contrat"/>
        <mapping class="sn.ridwan.ipm.model.Offre"/>
        <mapping class="sn.ridwan.ipm.model.Entreprise"/>
        <mapping class="sn.ridwan.ipm.model.StructureSanitaire"/>
        <mapping class="sn.ridwan.ipm.model.Praticien"/>
        <mapping class="sn.ridwan.ipm.model.Responsable"/>
        <mapping class="sn.ridwan.ipm.model.Specialite"/>
        <mapping class="sn.ridwan.ipm.model.Praticiens_Specialites"/>
        <mapping class="sn.ridwan.ipm.model.Service"/>
        <mapping class="sn.ridwan.ipm.model.Services_StructuresSanitaires"/>

     </session-factory>
 </hibernate-configuration>
